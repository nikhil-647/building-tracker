// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===========================================================
// 1️⃣ ENUMS - Define custom types for muscle groups and status
// ===========================================================
enum MuscleGroupEnum {
  Chest
  Back
  Shoulder
  Legs
  Bicep
  Tricep
  Abs
  Cardio
}

enum ActivityStatusEnum {
  pending
  completed
}

// ===========================================================
// 2️⃣ USER MODEL - Stores user authentication and profile info
// ===========================================================
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(100)
  name      String   @db.VarChar(100)
  password  String   @db.VarChar(255)
  image     String?  @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  addedExercises     Exercise[]         @relation("ExerciseAddedBy")
  exerciseTemplates  ExerciseTemplate[]
  exerciseSets       ExerciseSet[]
  activityTemplates  ActivityTemplate[]
  activities         Activity[]

  @@map("users")
}

// ===========================================================
// 3️⃣ MUSCLE GROUP - Predefined muscle groups (Chest, Back, etc.)
// ===========================================================
model MuscleGroup {
  id   Int              @id @default(autoincrement())
  name MuscleGroupEnum  @unique

  // Relations
  exercises         Exercise[]
  exerciseTemplates ExerciseTemplate[]

  @@map("muscle_group")
}

// ===========================================================
// 4️⃣ EXERCISES - Master list of all exercises
// ===========================================================
model Exercise {
  id            Int       @id @default(autoincrement())
  muscleGroupId Int       @map("muscle_group_id")
  exerciseName  String    @map("exercise_name") @db.VarChar(100)
  image         String?   @db.Text
  addedBy       Int?      @map("added_by")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  muscleGroup MuscleGroup @relation(fields: [muscleGroupId], references: [id], onDelete: Cascade)
  user        User?       @relation("ExerciseAddedBy", fields: [addedBy], references: [id], onDelete: Cascade)

  @@index([addedBy], map: "idx_exercise_user")
  @@map("exercises")
}

// ===========================================================
// 5️⃣ EXERCISE TEMPLATE - User's custom workout plan per muscle group
// ===========================================================
model ExerciseTemplate {
  id              Int       @id @default(autoincrement())
  name            String    @db.VarChar(100)
  exerciseGroupId Int       @map("exercise_group_id")
  userId          Int       @map("user_id")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  // Relations
  muscleGroup  MuscleGroup   @relation(fields: [exerciseGroupId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  exerciseSets ExerciseSet[]

  @@unique([userId, exerciseGroupId])
  @@index([userId], map: "idx_exercise_template_user")
  @@map("exercise_template")
}

// ===========================================================
// 6️⃣ EXERCISE SET - User's workout logs (weight, reps, etc.)
// ===========================================================
model ExerciseSet {
  id         Int      @id @default(autoincrement())
  templateId Int      @map("template_id")
  setNo      Int      @map("set_no")
  weight     Float?
  reps       Int?
  userId     Int      @map("user_id")
  date       DateTime @db.Date
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  template ExerciseTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([templateId, setNo, userId, date])
  @@index([userId], map: "idx_exercise_set_user")
  @@map("exercise_set")
}

// ===========================================================
// 7️⃣ ACTIVITY TEMPLATE - User's daily activity plan (steps, water, etc.)
// ===========================================================
model ActivityTemplate {
  id         Int      @id @default(autoincrement())
  userId     Int      @map("user_id")
  date       DateTime @db.Date
  activities String[] // e.g., ['10K steps', '8 glass water']
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  user           User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  activityLogs   Activity[]

  @@index([userId], map: "idx_activity_template_user")
  @@map("activity_template")
}

// ===========================================================
// 8️⃣ ACTIVITIES - Tracking completion status of daily activities
// ===========================================================
model Activity {
  id                 Int                @id @default(autoincrement())
  activityTemplateId Int                @map("activity_template_id")
  userId             Int                @map("user_id")
  status             ActivityStatusEnum @default(pending)
  createdAt          DateTime           @default(now()) @map("created_at")
  updatedAt          DateTime           @updatedAt @map("updated_at")

  // Relations
  activityTemplate ActivityTemplate @relation(fields: [activityTemplateId], references: [id], onDelete: Cascade)
  user             User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "idx_activities_user")
  @@map("activities")
}

